// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  firstname    String
  secondname   String
  lastname     String
  password     String
  email        String   @unique
  phone        String   @unique
  type         Role     @default(user)
  accessToken  String?
  refreshToken String?
  orders       Order[]
  reviews      Review[]
}

enum Role {
  user
  admin
}

model Category {
  id               Int        @id @default(autoincrement())
  title            String?
  parentCategoryId Int?
  parentCategory   Category?  @relation("CategorieType", fields: [parentCategoryId], references: [id])
  childCategories  Category[] @relation("CategorieType")
  details          Detail[]
}

model Detail {
  id               Int       @id @default(autoincrement())
  categoryId       Int?
  category         Category? @relation(fields: [categoryId], references: [id])
  title            String
  shortDescription String
  modelId          Int?
  model            CarModel? @relation(fields: [modelId], references: [id])
  options          String?
  price            Int
  star             Int       @default(0)
  img              String?
  vendorCode       String?
  orders           Order[]
  reviews          Review[]
}
 
model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  details   Detail[]
  createdAt DateTime @default(now())
}

model CarModel {
  id          Int        @id @default(autoincrement())
  title       String
  model       String?
  brandId     Int?
  brand       CarModel?  @relation("Brand", fields: [brandId], references: [id])
  brandModels CarModel[] @relation("Brand")
  img         String?
  detail      Detail[]
}

model Review {
  id       Int    @id @default(autoincrement())
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
  detailId Int
  detail   Detail @relation(fields: [detailId], references: [id])
  star     Int
  content  String
}
